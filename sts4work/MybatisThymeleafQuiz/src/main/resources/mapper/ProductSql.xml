<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product.mapper.ProductMapper">
	<select id="selectProduct" resultType="ProductDto">
		select * from product order by pro_num asc
	</select>
	<select id="selectOneProduct" parameterType="int" resultType="ProductDto">
		select * from product where pro_num=#{pro_num}
	</select>
	<insert id="insertProduct" parameterType="ProductDto">
		insert into product values(null,#{pro_name},#{pro_price},#{pro_color},#{pro_image},now())
	</insert>
</mapper>